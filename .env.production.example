# Monly AI Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Database Configuration - SQLite with persistent volume
DATABASE_URL=file:/app/data/database.sqlite

# OpenAI Configuration - REPLACE WITH YOUR ACTUAL API KEY
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-actual-openai-api-key-here

# Security Secrets - GENERATE SECURE RANDOM VALUES
# Use: openssl rand -hex 32 to generate these
SESSION_SECRET=generate-secure-random-32-byte-hex-string-here
JWT_SECRET=generate-secure-random-32-byte-hex-string-here

# Production Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Domain Configuration - UPDATE WITH YOUR DOMAIN
DOMAIN=monlyai.web.id

# Email for Let's Encrypt SSL certificates - UPDATE WITH YOUR EMAIL
ACME_EMAIL=admin@monlyai.web.id

# Optional: Basic Auth for monitoring/admin access
# Generate with: htpasswd -nb admin your-password
MONITOR_AUTH=admin:$apr1$xyz$hashedpassword

# Optional: Database backup configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Optional: Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json
